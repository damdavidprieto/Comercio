@page "/listarPedidos"
@model Comercio.Pages.Pedidos.ListarPedidosModel

@{
    ViewData["Title"] = "Listado de Pedidos";
}

<h2 class="mt-4">Listado de Pedidos</h2>

<a asp-page="/Pedidos/CrearPedido" class="btn btn-primary mb-3">Nuevo Pedido</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Cliente</th>
            <th>Fecha</th>
            <th>Estado</th>
            <th>Total</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var pedido in Model.Pedidos)
        {
            <tr>
                <td>@pedido.Id</td>
                <td>@pedido.Cliente?.Nombre</td>
                <td>@pedido.FechaPedido?.ToString("dd/MM/yyyy")</td>
                <td>@pedido.Estado</td>
                <td>@pedido.Total?.ToString("C")</td>
                <td>
                    <a asp-page="/Pedidos/DetallesPedido" asp-route-id="@pedido.Id" class="btn btn-info btn-sm">Ver Detalles</a>
                    <a asp-page="/Pedidos/EditarPedido" asp-route-id="@pedido.Id" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-page="/Pedidos/EliminarPedido" asp-route-id="@pedido.Id" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
