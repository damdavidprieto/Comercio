@page "/listarinventario"
@model Comercio.Pages.ListarInventarioModel

@{
    ViewData["Title"] = "Listado de Inventario";
}

<h2 class="mt-4">Listado de Inventario</h2>

<a asp-page="/AgregarInventario" class="btn btn-primary mb-3">Agregar Nuevo Inventario</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Producto</th>
            <th>Cantidad en Stock</th>
            <th>Ubicación en Almacén</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.InventarioLista)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Producto?.Nombre</td>
                <td>@item.CantidadStock</td>
                <td>@item.UbicacionAlmacen</td>
                <td>
                    <a asp-page="/Inventario/EditarInventario" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-page="/Inventario/EliminarInventario" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
