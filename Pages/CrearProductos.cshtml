@page "/crearproducto"
@model Comercio.Pages.CrearProductoModel
@{
    ViewData["Title"] = "Crear Producto";
}

<h2 class="mt-4">Crear Producto</h2>

<div class="card shadow-lg p-4 mt-3">
    <form method="post">
        <div class="mb-3">
            <label asp-for="Producto.Nombre" class="form-label">Nombre</label>
            <input asp-for="Producto.Nombre" class="form-control" placeholder="Ingrese el nombre del producto">
            <span asp-validation-for="Producto.Nombre" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Producto.Descripcion" class="form-label">Descripción</label>
            <textarea asp-for="Producto.Descripcion" class="form-control" rows="3" placeholder="Ingrese una descripción"></textarea>
            <span asp-validation-for="Producto.Descripcion" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Producto.Precio" class="form-label">Precio</label>
            <input asp-for="Producto.Precio" type="number" step="0.01" class="form-control" placeholder="Ingrese el precio">
            <span asp-validation-for="Producto.Precio" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Producto.CategoriaId" class="form-label">Categoría</label>
            <select asp-for="Producto.CategoriaId" class="form-select">
                <option value="">Seleccione una categoría</option>
                @foreach (var categoria in Model.Categorias)
                {
                    <option value="@categoria.Id">@categoria.Nombre</option>
                }
            </select>
            <span asp-validation-for="Producto.CategoriaId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Producto.ImagenUrl" class="form-label">Imagen (URL)</label>
            <input asp-for="Producto.ImagenUrl" class="form-control" placeholder="Ingrese la URL de la imagen">
            <span asp-validation-for="Producto.ImagenUrl" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Guardar Producto</button>
        <a asp-page="/Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
